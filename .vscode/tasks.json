{
    "tasks": [
        {
            "label": "Build kernel",
            "type": "cppbuild",
            "command": "/usr/bin/make",
            "args": ["-j", "$(nproc)"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Setup Ramdisk",
            "type": "process",
            "command":"${workspaceRoot}/.vscode/setup",
            "args": [
                "${workspaceRoot}/",
            ],
        },
        {
            "label": "Launch Qemu",
            "type": "process",
            "isBackground": true,
            "command":"${workspaceRoot}/.vscode/launch",
            "args": [
                "${workspaceRoot}/arch/x86_64/boot/bzImage",
                "${workspaceRoot}/initrd.img",
                "3",
                "1",
                "${workspaceRoot}",
                "debug"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting Qemu)",
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern":"^(Starting Qemu)",
                    "endsPattern":"^(Starting Qemu)"
                }
            },
            "dependsOrder": "sequence",
            "dependsOn": ["Build kernel", "Setup Ramdisk"],
        }
    ],

    "version": "2.0.0"
}