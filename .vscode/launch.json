{
  "configurations": [
    {
      "type": "cppdbg",
      "name": "Debug kernel",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Hardware Breakpoint on main",
          "text": "-break-insert -h -f main",
          "ignoreFailures": true
        },
        {
          "text": "set remotetimeout 60000"
        },
        {
          "text": "symbol-file ${workspaceRoot}/vmlinux"
        }
      ],
      "targetArchitecture": "x86_64",
      "program": "${workspaceRoot}/vmlinux",
      "miDebuggerServerAddress": "localhost:1234",
      "additionalSOLibSearchPath": "${workspaceRoot}/**",
      "sourceFileMap": {
        "system_map": "${workspaceRoot}/System.map"
      },
      "hardwareBreakpoints": {
        "require": true,
        "limit": 4
      },
      "symbolLoadInfo": {
        "loadAll": true,
        "exceptionList": ""
      },
      "preLaunchTask": "Launch Qemu"
    },
  ]
}